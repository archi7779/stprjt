{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2020",
    "types": ["node"],
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"], 
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
          "@/*": ["./src/*"],
          "@app/*": ["./src/app/*"],
          "@pages/*": ["./src/pages/*"],
          "@widgets/*": ["./src/widgets/*"],
          "@features/*": ["./src/features/*"],
          "@entities/*": ["./src/entities/*"],
          "@shared/*": ["./src/shared/*"]
        },
  },
   
  "include": ["src"],
}